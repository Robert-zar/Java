    <style name="Theme.TicTacToe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/light</item>
        <item name="colorPrimaryVariant">@color/light</item>
        <item name="colorOnPrimary">@color/darkBlue</item>
        
        <item name="colorSecondary">@color/lighterBlue</item>
        <item name="colorSecondaryVariant">@color/lighterBlue</item>
        <item name="colorOnSecondary">@color/darkBlue</item>
        
        <item name="android:statusBarColor">@color/darkBlue</item>
        
        <item name="android:background">@color/darkBlue</item>
    </style>
    <style name="dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/lighterBlue</item>
        <item name="android:textColor">@color/light</item>
    </style>
    <style name="et" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/light</item>
        <item name="android:backgroundTint">@color/light</item>
        <item name="android:textColorHint">#93FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="h1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/light</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="h2" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/light</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="primaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/lighterBlue</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="tv_gameBoard" parent="h2">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
</resources>